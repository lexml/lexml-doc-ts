{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./built",
    "sourceMap": true,
    "target": "ES6",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
        ]
    }    
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ]
}
